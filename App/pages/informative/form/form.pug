app-title(ng-if="!editing") Novo Informativo
app-title(ng-if="editing") Editar Informativo

form(md-form-validator, ng-submit="$ctrl.submit()")
  md-card
    md-card-content(layout-padding)

      div(layout="column",layout-gt-xs="row")
        div(flex)
          md-input-container.md-block
            label Titulo
            input(ng-model='$ctrl.model.title', name='title', required)
            md-messages

        div(flex)
          md-input-container.md-block
            label Dia dispon√≠vel
            input(ng-model="$ctrl.model.date", name="date", required, ui-date-mask, datepicker)
            md-messages(field="date")

      markdown-editor(ng-model="$ctrl.model.message", placeholder="Mensagem")

  div(layout="row", layout-align="space-between center")
    md-button.md-raised(ng-href="/informativos") Cancelar
    md-button.md-raised.md-accent(type="submit") Salvar
