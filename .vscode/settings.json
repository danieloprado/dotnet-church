// Place your settings in this file to overwrite default and user settings.
{
    "editor.tabSize": 2,
    "files.trimTrailingWhitespace": true,
    "editor.formatOnType": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.DS_Store": true,
        "**/*.lock.json": true,
        "**/obj/**": true,
        "**/bin/**": true,
        "**/node_modules/**": true,
        "**/bower_components/**": true,
        "**/*.js": { "when": "$(basename).ts"},
        "**/*.map": { "when": "$(basename)"},
        "wwwroot": true,
        "typings": true
    }
}